@model Travel
@{
}

<h1>Edytuj podróż</h1>
<form asp-controller="Travel" asp-action="Update" method="post">
    <input asp-for="Id" type="hidden" />

    <div class="mb-3">
        <label asp-for="Name">Nazwa</label>
        <input class="form-control" asp-for="Name" />
        <span class="test-danger" asp-validation-for="Name"></span>
    </div>

    <div class="mb-3">
        <label asp-for="StartDate">Data rozpoczęcia</label>
        <input class="form-control" asp-for="StartDate" type="datetime-local" />
        <span class="test-danger" asp-validation-for="StartDate"></span>
    </div>

    <div class="mb-3">
        <label asp-for="EndDate">Data zakończenia</label>
        <input class="form-control" asp-for="EndDate" type="datetime-local" />
        <span class="test-danger" asp-validation-for="EndDate"></span>
    </div>

    <div class="mb-3">
        <label asp-for="StartingLocation">Miejsce początkowe</label>
        <input class="form-control" asp-for="StartingLocation" />
        <span class="test-danger" asp-validation-for="StartingLocation"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Destination">Miejsce docelowe</label>
        <input class="form-control" asp-for="Destination" />
        <span class="test-danger" asp-validation-for="Destination"></span>
    </div>

    <div>
        <label asp-for="Participants">Uczestnicy</label>
        <span asp-validation-for="Participants" class="text-danger"></span>
        <input class="form-control" asp-for="Participants" />
    </div>

    <div class="mb-3">
        <label asp-for="Guide">Przewodnik</label>
        <input class="form-control" asp-for="Guide" />
        <span class="test-danger" asp-validation-for="Guide"></span>
    </div>

    <div class="mb-3">
        <button class="btn btn-primary" type="submit">Zapisz</button>
        <button class="btn btn-secondary" type="reset">Wyczyść</button>
    </div>
</form>
