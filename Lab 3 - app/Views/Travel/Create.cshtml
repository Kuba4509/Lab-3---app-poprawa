@model Travel
@{
}

<h1>Dodaj podróż</h1>

<form asp-controller="Travel" asp-action="Create" method="post">
    @*<div asp-validation-summary="All"></div>*@

    <div class="mb-3">
        <label asp-for="Name"></label>
        <input class="form-control" asp-for="Name" />
        <span class="text-danger" asp-validation-for="Name"></span>
    </div>

    <div class="mb-3">
        <label asp-for="StartDate"></label>
        <input class="form-control" asp-for="StartDate" type="datetime-local" />
        <span class="text-danger" asp-validation-for="StartDate"></span>
    </div>

    <div class="mb-3">
        <label asp-for="EndDate"></label>
        <input class="form-control" asp-for="EndDate" type="datetime-local" />
        <span class="text-danger" asp-validation-for="EndDate"></span>
    </div>

    <div class="mb-3">
        <label asp-for="StartingLocation"></label>
        <input class="form-control" asp-for="StartingLocation" />
        <span class="text-danger" asp-validation-for="StartingLocation"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Destination"></label>
        <input class="form-control" asp-for="Destination" />
        <span class="text-danger" asp-validation-for="Destination"></span>
    </div>

    <div>
        <label asp-for="Participants"></label>
        <span asp-validation-for="Participants" class="text-danger"></span>
        <select class="form-control" asp-for="Participants" ></select>
    </div>

    <div class="mb-3">
        <label asp-for="Guide"></label>
        <input class="form-control" asp-for="Guide" />
        <span class="text-danger" asp-validation-for="Guide"></span>
    </div>

    <div class="mb-3">
        <button class="btn btn-primary" type="submit">Utwórz</button>
        <button class="btn btn-secondary" type="reset">Wyczyść</button>
    </div>
</form>
